{
  "name": "world-contracts",
  "version": "1.0.0",
  "description": "contracts for eve frontier",
  "scripts": {
    "build": "find contracts -maxdepth 1 -mindepth 1 -type d | xargs -P 4 -I {} sui move build --path {}",
    "test": "find contracts -maxdepth 1 -mindepth 1 -type d | xargs -P 4 -I {} sui move test --path {}",
    "deploy": "./scripts/deploy.sh",
    "deploy:dry-run": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh --dry-run",
    "fmt": "prettier --plugin=@mysten/prettier-plugin-move --write \"**/**/*.move\"",
    "fmt:check": "prettier --plugin=@mysten/prettier-plugin-move --check \"**/**/*.move\" \"examples/**/*.ts\" \"tools/**/*.ts\"",
    "fmt:ts": "prettier --write \"examples/**/*.ts\" \"tools/**/*.ts\"",
    "fmt:ts:check": "prettier --check \"examples/**/*.ts\" \"tools/**/*.ts\"",
    "sig-verify": "tsx examples/crypto/sig-verify.ts",
    "generate-test-sig": "tsx examples/location/generate-test-signature.ts",
    "configure-fuel-energy": "tsx examples/network-node/configure-fuel-energy.ts",
    "create-character": "tsx examples/character/create-character.ts",
    "create-nwn": "tsx examples/network-node/create-nwn.ts",
    "deposit-fuel": "tsx examples/network-node/deposit-fuel.ts",
    "online-nwn": "tsx examples/network-node/online-nwn.ts",
    "update-fuel": "tsx examples/network-node/update-fuel.ts",
    "offline-nwn": "tsx examples/network-node/offline-nwn.ts",
    "unanchor-nwn": "tsx examples/network-node/unanchor-nwn.ts",
    "get-fuel-quantity": "tsx examples/network-node/helper.ts",
    "create-assembly": "tsx examples/assembly/create-assembly.ts",
    "online": "tsx examples/assembly/online.ts",
    "create-storage-unit": "tsx examples/storage-unit/create-storage-unit.ts",
    "ssu-online": "tsx examples/storage-unit/online.ts",
    "game-item-to-chain": "tsx examples/storage-unit/game-item-to-chain.ts",
    "extract:errors": "tsx tools/error-decoder/error-extractor.ts",
    "compile:decoder": "tsc --project tools/error-decoder/tsconfig.json",
    "prepare:decoder": "cd tools/error-decoder && cp index.html styles.css dist/",
    "build:decoder": "npm run extract:errors && npm run compile:decoder && npm run prepare:decoder",
    "dev:decoder": "npm run extract:errors && npm run compile:decoder -- --watch",
    "debug:prepare": "chmod +x ./scripts/prepare-debug.sh && ./scripts/prepare-debug.sh"
  },
  "dependencies": {
    "@mysten/prettier-plugin-move": "^0.3.3",
    "@mysten/sui": "^1.45.2",
    "@noble/hashes": "^1.8.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.7.4"
  },
  "author": "EVE Frontier",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}