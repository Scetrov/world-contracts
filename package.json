{
  "name": "world-contracts",
  "version": "1.0.0",
  "description": "contracts for eve frontier",
  "scripts": {
    "build": "find contracts -maxdepth 1 -mindepth 1 -type d | xargs -P 4 -I {} sui move build --path {}",
    "test": "find contracts -maxdepth 1 -mindepth 1 -type d | xargs -P 4 -I {} sui move test --path {}",
    "fmt": "prettier --plugin=@mysten/prettier-plugin-move --write \"**/**/*.move\"",
    "fmt:check": "prettier --plugin=@mysten/prettier-plugin-move --check \"**/**/*.move\" \"ts-scripts/**/*.ts\" \"tools/**/*.ts\"",
    "fmt:ts": "prettier --write \"ts-scripts/**/*.ts\" \"tools/**/*.ts\"",
    "fmt:ts:check": "prettier --check \"ts-scripts/**/*.ts\" \"tools/**/*.ts\"",
    "clean": "rm -rf contracts/world/Published.toml contracts/extension_examples/Published.toml deployments/*",
    "deploy-world": "chmod +x ./scripts/deploy-world.sh && ./scripts/deploy-world.sh",
    "configure-world": "chmod +x ./scripts/configure-world.sh && ./scripts/configure-world.sh",
    "create-test-resources": "chmod +x ./scripts/seed-world.sh && ./scripts/seed-world.sh",
    "deploy-builder-ext": "chmod +x ./scripts/deploy-builder-ext.sh && ./scripts/deploy-builder-ext.sh",
    "extract-object-ids": "tsx ts-scripts/utils/extract-object-ids.ts",
    "sig-verify": "tsx ts-scripts/crypto/sig-verify.ts",
    "generate-test-sig": "tsx ts-scripts/location/generate-test-signature.ts",
    "setup-access": "tsx ts-scripts/access/setup-access.ts",
    "configure-fuel-energy": "tsx ts-scripts/network-node/configure-fuel-energy.ts",
    "configure-gate-distance": "tsx ts-scripts/gate/configure-distance.ts",
    "create-character": "tsx ts-scripts/character/create-character.ts",
    "create-nwn": "tsx ts-scripts/network-node/create-nwn.ts",
    "deposit-fuel": "tsx ts-scripts/network-node/deposit-fuel.ts",
    "online-nwn": "tsx ts-scripts/network-node/online-nwn.ts",
    "update-fuel": "tsx ts-scripts/network-node/update-fuel.ts",
    "offline-nwn": "tsx ts-scripts/network-node/offline-nwn.ts",
    "unanchor-nwn": "tsx ts-scripts/network-node/unanchor-nwn.ts",
    "get-fuel-quantity": "tsx ts-scripts/network-node/helper.ts",
    "create-assembly": "tsx ts-scripts/assembly/create-assembly.ts",
    "online": "tsx ts-scripts/assembly/online.ts",
    "create-storage-unit": "tsx ts-scripts/storage-unit/create-storage-unit.ts",
    "ssu-online": "tsx ts-scripts/storage-unit/online.ts",
    "game-item-to-chain": "tsx ts-scripts/storage-unit/game-item-to-chain.ts",
    "chain-item-to-game": "tsx ts-scripts/storage-unit/chain-item-to-game.ts",
    "withdraw-deposit": "tsx ts-scripts/storage-unit/withdraw-deposit.ts",
    "deposit-to-ephemeral-inventory": "tsx ts-scripts/storage-unit/deposit-to-ephemeral-inventory.ts",
    "create-gates": "tsx ts-scripts/gate/create-gates.ts",
    "online-gates": "tsx ts-scripts/gate/online.ts",
    "link-gates": "tsx ts-scripts/gate/link-gates.ts",
    "jump": "tsx ts-scripts/gate/jump.ts",
    "configure-builder-extension-rules": "tsx ts-scripts/builder_extension/configure-rules.ts",
    "authorise-gate": "tsx ts-scripts/builder_extension/authorise-gate.ts",
    "authorise-storage-unit": "tsx ts-scripts/builder_extension/authorise-storage-unit.ts",
    "issue-tribe-jump-permit": "tsx ts-scripts/builder_extension/issue-tribe-jump-permit.ts",
    "collect-corpse-bounty": "tsx ts-scripts/builder_extension/collect-corpse-bounty.ts",
    "jump-with-permit": "tsx ts-scripts/builder_extension/jump-with-permit.ts",
    "extract:errors": "tsx tools/error-decoder/error-extractor.ts",
    "compile:decoder": "tsc --project tools/error-decoder/tsconfig.json",
    "prepare:decoder": "cd tools/error-decoder && cp index.html styles.css dist/",
    "build:decoder": "npm run extract:errors && npm run compile:decoder && npm run prepare:decoder",
    "dev:decoder": "npm run extract:errors && npm run compile:decoder -- --watch",
    "debug:prepare": "chmod +x ./scripts/prepare-debug.sh && ./scripts/prepare-debug.sh"
  },
  "dependencies": {
    "@mysten/bcs": "^2.0.2",
    "@mysten/prettier-plugin-move": "^0.3.3",
    "@mysten/sui": "^1.45.2",
    "@noble/hashes": "^1.8.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.7.4"
  },
  "author": "EVE Frontier",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}