{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": false,
        "sourceMap": false
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "error-extractor.ts",
        "node_modules"
    ]
}