# Sui Network Configuration
# Copy this file to .env and update with your values
# Never commit .env to version control

# Network to use (devnet, testnet, localnet)
SUI_NETWORK=devnet

# Custom RPC URL (optional, defaults to public endpoints)
# SUI_RPC_URL=https://fullnode.devnet.sui.io:443


# Gas budget for transactions (in MIST, 1 SUI = 1,000,000,000 MIST)
GAS_BUDGET=100000000

# Comma-separated list of admin account addresses
# Must be valid Sui addresses (64 hex chars, e.g., 0x202d7d52ab5f8e8824e3e8066c0b7458f84e326c5d77b30254c69d807586a7b0,0x202d7d52ab5f8e8824e3e8066c0b7458f84e326c5d77b30254c69d807586a7b0)
ADMIN_ADDRESS=


# Optional: Import wallet from mnemonic (12 or 24 words)
# Default is empty, so it will use the existing active address from ~/.sui
MNEMONIC=

# Optional: Key scheme for mnemonic import (default: ed25519)
# Options: ed25519, secp256k1, secp256r1
KEY_SCHEME=ed25519